<style>
    /* --------------- */

    ._topnav {
        overflow: hidden;
        width: 100%;
        top: 0;
        left: 0;
        height: 5%;
        background-color: #333;
        position: fixed;
        z-index: 0;
        background-color: #4CAF50;
    }

    ._topnav #myLinks {
        display: none;
    }

    /* Style navigation menu links */
    ._topnav a {
        color: white;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 1em;
        display: block;
        background-color: #333;
        text-align: center;
        align-items: center;
        align-content: center;
        vertical-align: top;

    }

    /* Style the hamburger menu */
    ._topnav a._icon {
        background: #333;
        float: left;
        display: block;
    }

    /* Add a grey background color on mouse-over */
    ._topnav a:hover {
        background-color: #ddd;
        color: black;
    }

    /* Style the active link (or home/logo) */
    ._topnav a._active {
        top: 0;
        height: 90%;
        width: 100%;
        padding: 5px;
        position: absolute;
        background-color: #4CAF50;
        color: white;
        text-align: center;
    }
</style>

